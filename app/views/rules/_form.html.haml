= form_for @rule do |f|
  - if @rule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rule.errors.count, "error")} prohibited this rule from being saved:"
      %ul
        - @rule.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
