= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :owners
    = f.text_field :owners
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
